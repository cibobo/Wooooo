<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cibobo.wooooo.activities.BeginActivity">

    <Button
        android:layout_width="@dimen/begin_buttons_width"
        android:layout_height="@dimen/login_editText_height"
        android:text="@string/button_salve"
        android:id="@+id/buttonSlave"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@color/blue"
        android:drawableLeft="@drawable/car"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/begin_buttons_padding"
        android:paddingLeft="@dimen/begin_buttons_padding"/>

    <Button
        android:layout_width="@dimen/begin_buttons_width"
        android:layout_height="@dimen/begin_buttons_height"
        android:text="@string/button_master"
        android:id="@+id/buttonMaster"
        android:layout_below="@+id/buttonSlave"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@color/blue"
        android:drawableRight="@drawable/sad_face"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/begin_buttons_padding"
        android:paddingRight="@dimen/begin_buttons_padding"/>

</RelativeLayout>
